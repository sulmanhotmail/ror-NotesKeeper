<%= form_for(@note) do |f| %>
    <% if @note.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

          <ul>
            <% @note.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="input-field col s12">
        <i class="mdi-editor-format-size prefix"></i>
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, input_html: {class: "validate"} %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <i class="mdi-editor-border-color prefix"></i>
        <%= f.label :description %>
        <%= f.text_field :description, input_html: {class: "validate"} %>
      </div>
    </div>

    <div class="card-action">
      <%= link_to '<i class="mdi-content-backspace left"></i> Back'.html_safe, notes_path, class: 'waves-effect waves-light btn red darken-4 white-text' %>
      <%= button_tag(type: 'submit', class: "waves-effect waves-light btn light-green darken-4") do %>
          Submit <i class="mdi-content-send right"></i>
      <% end %>
    </div>
<% end %>