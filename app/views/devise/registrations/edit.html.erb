<div class="row">
  <div class="col s12 m8 offset-m2 l6 offset-l3">
    <div class="card grey lighten-5 z-depth-5">
      <div class="card-content black-text">
        <span class="card-title black-text">Edit <%= resource_name.to_s.humanize %></span>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <div class="row">
              <div class="input-field col s12">
                <i class="mdi-content-mail prefix"></i>
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, input_html: {class: "validate"} %>
              </div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="row">
              <div class="input-field col s12">
                <i class="mdi-action-lock-outline prefix"></i>
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "off", input_html: {class: "validate"} %>
                <% if @validatable %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <i class="mdi-action-lock-outline prefix"></i>
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "off", input_html: {class: "validate"} %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <i class="mdi-action-lock prefix"></i>
                <%= f.label :current_password %>
                <%= f.password_field :current_password, autocomplete: "off", input_html: {class: "validate"} %>
                <em>(we need your current password to confirm your changes)</em>
              </div>
            </div>

            <div class="card-action">
              <%= link_to '<i class="mdi-content-backspace left"></i> Back'.html_safe, root_path, class: 'waves-effect waves-light btn red darken-4 white-text' %>
              <%= button_tag(type: 'submit', class: "waves-effect waves-light btn light-green darken-4") do %>
                  <i class="mdi-action-settings left"></i> Update
              <% end %><br><br>
              <p>
              <h3>Cancel my account</h3>

              <p>Unhappy? <%= link_to '<i class="mdi-alert-warning left"></i>Cancel my account<i class="mdi-alert-warning right"></i> '.html_safe, registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "waves-effect waves-light btn red white-text" %></p>
              </p>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
