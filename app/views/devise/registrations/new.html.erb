<% content_for :title do %>
    Sign Up |
<% end %>
<div class="row">
  <div class="col s12 m8 offset-m2 l6 offset-l3">
    <div class="card grey lighten-5 z-depth-5">
      <div class="card-content black-text">
        <span class="card-title black-text">Sign Up</span>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, input_html: {class: "validate"} %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "off", input_html: {class: "validate"} %>
                <% if @validatable %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "off", input_html: {class: "validate"} %>
              </div>
            </div>

            <div class="card-action">
              <%= link_to '<i class="mdi-content-backspace left"></i> Back'.html_safe, root_path, class: 'waves-effect waves-light btn red darken-4 white-text' %>
              <%= button_tag(type: 'submit', class: "waves-effect waves-light btn light-green darken-4") do %>
                  <i class="mdi-social-person-add left"></i> Sign Up
              <% end %><br><br>
              <p>
                <%= render "devise/shared/links" %>
              </p>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= devise_error_messages! %>

