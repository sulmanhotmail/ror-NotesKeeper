<div class="row">
  <div class="col s12 m6 offset-m3">
    <div class="card grey lighten-5 z-depth-5">
      <div class="card-content black-text">
        <span class="card-title black-text">Log In</span>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <i class="mdi-content-mail prefix"></i>
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, input_html: {class: "validate"} %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <i class="mdi-action-lock prefix"></i>
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "off", input_html: {class: "validate"} %>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
            <% end -%>

            <div class="card-action">
              <%= link_to '<i class="mdi-content-backspace left"></i> Back'.html_safe, root_path, class: 'waves-effect waves-light btn red darken-4 white-text' %>
              <%= button_tag(type: 'submit', class: "waves-effect waves-light btn light-green darken-4") do %>
                  <i class="mdi-social-person left"></i> Log In
              <% end %><br><br>
              <p>
                <%= render "devise/shared/links" %>
              </p>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
