<%- if controller_name != 'sessions' %>
  <%= link_to '<i class="mdi-social-person left"></i> Log In'.html_safe, new_session_path(resource_name), class: "blue-text" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to '<i class="mdi-social-person-add left"></i> Sign up'.html_safe, new_registration_path(resource_name), class: "blue-text" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to '<i class="mdi-av-new-releases left"></i> Forgot your password?'.html_safe, new_password_path(resource_name), class: "blue-text" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to '<i class="mdi-av-new-releases left"></i> Didnot receive confirmation instructions?'.html_safe, new_confirmation_path(resource_name), class: "blue-text" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to '<i class="mdi-av-new-releases left"></i> Didnot receive unlock instructions?'.html_safe, new_unlock_path(resource_name), class: "blue-text" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
