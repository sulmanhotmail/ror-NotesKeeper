<header>
  <!-- Dropdown Structure -->
  <ul id="dropdown1" class="dropdown-content">
    <li><%= link_to '<i class="mdi-action-settings left"></i> Settings'.html_safe, edit_user_registration_path %></li>
    <li class="divider"></li>
    <li><%= link_to '<i class="mdi-social-person-outline left"></i> Log Out'.html_safe, destroy_user_session_path, method: :delete %></li>
  </ul>
  <!-- Dropdown Structure -->
  <ul id="dropdown2" class="dropdown-content">
    <li><%= link_to '<i class="mdi-action-settings left"></i> Settings'.html_safe, edit_user_registration_path %></li>
    <li class="divider"></li>
    <li><%= link_to '<i class="mdi-social-person-outline left"></i> Log Out'.html_safe, destroy_user_session_path, method: :delete %></li>
  </ul>


  <div class="navbar-fixed">
    <nav class="grey darken-2 z-depth-2">
      <div class="nav-wrapper">
        <%= link_to '<i class="mdi-action-note-add left"></i>NOTER'.html_safe, root_path, class: "brand-logo" %>
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
        <ul class="right hide-on-med-and-down">
          <% if !user_signed_in? %>
              <li><%= link_to '<i class="mdi-action-info left"></i> Info'.html_safe, about_path  %></li>
              <li><%= link_to '<i class="mdi-social-person left"></i> Log In'.html_safe, new_user_session_path %></li>
          <% else %>
              <!-- Dropdown Trigger -->
              <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><%= current_user.email %><i class="mdi-navigation-arrow-drop-down right"></i></a></li>
          <% end %>
        </ul>
        <ul class="side-nav" id="mobile-demo">
          <% if !user_signed_in? %>
              <li><%= link_to '<i class="mdi-action-info left"></i> Info'.html_safe, about_path  %></li>
              <li><%= link_to '<i class="mdi-social-person left"></i> Log In'.html_safe, new_user_session_path %></li>
          <% else %>
              <li><a class="dropdown-button" href="#!" data-activates="dropdown2">User<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>

<script>
    $(document).ready(function(){
        $(".button-collapse").sideNav();
        $(".dropdown-button").dropdown();
    });
</script>